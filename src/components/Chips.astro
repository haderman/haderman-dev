---
interface Props {
  values: string[];
}

const { values } = Astro.props;
---
<ul>
  {values.map((chip) => {
    return <li>{chip}</li>;
  })}
</ul>

<style>
  ul {
    list-style: none;
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: var(--fluid--2);
  }

  li {
    font-size: var(--fluid-0);
    padding: var(--fluid--3) var(--fluid--2);
    border-radius: 0; /* var(--fluid--1); */
    background:
      linear-gradient(to bottom, oklch(0 0.4 210 / 1), oklch(0.2 0.1 290 / 1)) padding-box,
      linear-gradient(30deg, oklch(0.3 0.1 210), oklch(0.25 0.1 290)) border-box;
    border: 1px solid transparent;

  }
</style>
