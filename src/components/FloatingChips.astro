---
const { values } = Astro.props;
---
<ul>
  {values.map((chip) => {
    return <li>{chip}</li>;
  })}
</ul>

<style>
  ul {
    list-style: none;
    padding: 0;
    margin: 0;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
  }

  li {
    position: absolute;
    border: 0.5px solid lch(0 0% 0% / 0.1);
    font-size: var(--fluid-0);
    padding: var(--fluid--3) var(--fluid--2);
    border-radius: var(--fluid--1);
    /* border: 1px solid; */
    backdrop-filter: blur(4px);

    background:
      linear-gradient(lch(0 0 0), lch(0 0 0)) padding-box,
      linear-gradient(to right,lch(54 50.67 180.25), lch(51 76.64 275.89)) border-box;
    border: 2px solid transparent;
  }

  li:nth-child(1) {
    top: 8%;
    left: 5%;
    transform: rotate(-30deg);
  }

  li:nth-child(2) {
    top: 10%;
    left: 40%;
    transform: rotate(15deg);
  }

  li:nth-child(3) {
    top: 8%;
    right: 5%;
    transform: rotate(30deg);
  }

  li:nth-child(4) {
    top: 40%;
    left: 60%;
    transform: rotate(-15deg);
  }

  li:nth-child(5) {
    top: 30%;
    left: 25%;
    transform: rotate(-5deg);
  }

  li:nth-child(6) {
    background: #2196f3;
  }
</style>
